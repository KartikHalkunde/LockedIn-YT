{
  "manifest_version": 3,
  "name": "LockedIn",
  "version": "1.0.5",
  "description": "Stay focused on YouTube by removing distracting elements. Block recommended videos, Shorts, autoplay, and more.",
  "icons": {
    "48": "icons/icon48.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "kartik@lockedin.com"
    }
  }
}